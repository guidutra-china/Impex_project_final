+namespace App\Filament\Resources\PaymentTerm;
+
+use App\Filament\Resources\PaymentTerm\Pages;
+use App\Filament\Resources\PaymentTerm\RelationManagers\StagesRelationManager;
+use App\Filament\Resources\PaymentTerm\Schemas\PaymentTermForm;
+use App\Filament\Resources\PaymentTerm\Tables\PaymentTermsTable;
+use App\Models\PaymentTerm;
+use Filament\Resources\Resource;
+use Filament\Schemas\Schema;
+use Filament\Tables\Table;
+
+class PaymentTermResource extends Resource
+{
+    protected static ?string $model = PaymentTerm::class;
+
+    protected static ?string $navigationIcon = 'heroicon-o-currency-dollar';
+    
+    protected static $navigationGroup = 'Settings';
+
+    public static function schema(Schema $schema): Schema
+    {
+        return PaymentTermForm::configure($schema);
+    }
+
+    public static function table(Table $table): Table
+    {
+        return PaymentTermsTable::configure($table);
+    }
+
+    public static function getRelations(): array
+    {
+        return [
+            StagesRelationManager::class,
+        ];
+    }
+
+    public static function getPages(): array
+    {
+        return [
+            'index' => Pages\ListPaymentTerms::route('/'),
+            'create' => Pages\CreatePaymentTerm::route('/create'),
+            'edit' => Pages\EditPaymentTerm::route('/{record}/edit'),
+        ];
+    }
+}
